<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('partials/layouts/head') %>

        <%- include('partials/layouts/styles') %>
</head>

<body>
    <div class="admin-page audit-page">
        <div class="container">
            <div class="header-top">
                <div class="nav-top">
                    <div class="bar-top">
                        <i class="fa fa-bars" aria-hidden="true"></i>
                    </div>
                    <div class="logo-top">
                        <p class="brand">Adminstrator</p>
                    </div>
                </div>
                <div class="menu-top">
                    <%- include('partials/layouts/admin-sidebar.ejs')  %> 
                </div>
            </div>
            
            <div class="body">
                <div class="header">
                    <form action="/admin/audit/standand" method="get">
                        <div class="box-form">
                            <div class="form-item">
                                <p class="title">Th·ªùi gian</p>
                                <input type="date" value="" id="addDate" name="addDate">
                                <label for="addDate"></label>
                            </div>
                            
                        </div>
                        <div class="box-btn">
                            <button class="btn-submit"><i class="fa fa-eye" aria-hidden="true"></i> Xem</button>
                        </div>
                    </form>
                </div>
                <div class="main">
                    <div class="box-table">
                        <table>
                            <thead>
                                <tr>
                                    <th>TIMESTAMP</th>
                                    <th>USERNAME</th>
                                    <th>OWNER</th>
                                    <th>OBJ_NAME</th>
                                    <th>ACTION_NAME</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% data.forEach(item => { %>
                                    <tr>
                                        <td>
                                            <p><%= item['TIMESTAMP'] %></p>
                                        </td>
                                        <td>
                                            <p><%= item['USERNAME'] %></p>
                                        </td>
                                        <td>
                                            <p><%= item['OWNER'] %></p>
                                        </td>
                                        <td>
                                            <p><%= item['OBJ_NAME'] %></p>
                                        </td>
                                        <td>
                                            <p><%= item['ACTION_NAME'] %></p>
                                        </td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('partials/layouts/scripts') %>
</body>

</html>