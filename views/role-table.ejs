<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('partials/layouts/head') %>

    <%- include('partials/layouts/styles') %>
</head>

<body>
    <div class="admin-page">
        <div class="container">
            <div class="header-top">
                <div class="nav-top">
                    <div class="bar-top">
                        <i class="fa fa-bars" aria-hidden="true"></i>
                    </div>
                    <div class="logo-top">
                        <p class="brand">Adminstrator</p>
                    </div>
                </div>
                <div class="menu-top">
                    <%- include('partials/layouts/admin-sidebar.ejs')  %> 
                </div>
            </div>
            <div class="body">
                <div class="sidebar">
                    <div class="header">
                        <p class="title">Quyền User</p>
                    </div>
                    <ul class="menu-list">
                        <li class="menu-item">
                            <a href="/admin/role/<%= role %>/nhanvien" class="menu-link">
                                <span>Table</span>
                                <i class="fa fa-angle-right" aria-hidden="true"></i>
                            </a>
                        </li>
                        <li class="menu-item">
                            <a href="/admin/role/<%= role %>/nhanvien/column" class="menu-link">
                                <span>Column</span>
                                <i class="fa fa-angle-right" aria-hidden="true"></i>
                            </a>
                        </li>
                    </ul>
                    <div class="box-btn">
                        <a href="/admin/role" class="btn-link">Quay lại</a>
                    </div>
                </div>
                <div class="main-body">
                    <div class="header">
                        <p class="title">Table Privilege</p>
                    </div>
                    <% if (Rtype == 1) { %>
                        <div class="container-check-box-item">
                            <div class="detail-check-box-item">
                                <a href="/admin/role/<%= role %>/nhanvien" class="link-detail-item <% if (table == 'nhanvien') { %>
                                 active-link
                                <% } %>">Nhân viên</a>
                                <a href="/admin/role/<%= role %>/thuoc" class="link-detail-item <% if (table == 'thuoc') { %>
                                 active-link
                                <% } %>">Thuốc</a>
                                <a href="/admin/role/<%= role %>/dichvu" class="link-detail-item <% if (table == 'dichvu') { %>
                                    active-link
                                <% } %>">Dịch vụ</a>
                                <a href="/admin/role/<%= role %>/benhnhan" class="link-detail-item <% if (table == 'benhnhan') { %>
                                    active-link
                                   <% } %>">Bệnh nhân</a>
                                <a href="/admin/role/<%= role %>/hoadon" class="link-detail-item <% if (table == 'hoadon') { %>
                                    active-link
                                   <% } %>">Hóa đơn</a>
                                <a href="/admin/role/<%= role %>/chamcong" class="link-detail-item <% if (table == 'chamcong') { %>
                                    active-link
                                   <% } %>">Chấm công</a>
                                <a href="/admin/role/<%= role %>/chitiethoadon" class="link-detail-item <% if (table == 'chitiethoadon') { %>
                                    active-link
                                   <% } %>">Chi tiết hóa đơn</a>
                                <a href="/admin/role/<%= role %>/donthuoc" class="link-detail-item <% if (table == 'donthuoc') { %>
                                    active-link
                                   <% } %>">Đơn thuốc</a>
                                <a href="/admin/role/<%= role %>/phong" class="link-detail-item <% if (table == 'phong') { %>
                                    active-link
                                   <% } %>">Phòng</a>
                                <a href="/admin/role/<%= role %>/donvi" class="link-detail-item <% if (table == 'donvi') { %>
                                    active-link
                                   <% } %>">Đơn vị</a>
                                <a href="/admin/role/<%= role %>/lichtruc" class="link-detail-item <% if (table == 'lichtruc') { %>
                                    active-link
                                   <% } %>">Lịch trực</a>
                                <a href="/admin/role/<%= role %>/hosobenhan" class="link-detail-item <% if (table == 'hosobenhan') { %>
                                    active-link
                                   <% } %>">Hồ sơ bệnh án</a>
                                <a href="/admin/role/<%= role %>/chitietdonthuoc" class="link-detail-item <% if (table == 'chitietdonthuoc') { %>
                                    active-link
                                   <% } %>">Chi tiết đơn thuốc</a>
                                <a href="/admin/role/<%= role %>/hosodichvu" class="link-detail-item <% if (table == 'hosodichvu') { %>
                                    active-link
                                   <% } %>">Hồ sơ dịch vụ</a>
                            </div>
                            <div class="table-check-box">
                                <% if (Rtype == 1) { %>
                                    <form action="/admin/role/<%= role %>/<%= table %>" method="post">
                                        <div class="item">
                                            <div class="item-checkbox">
                                                <div class="item-checkbox-content">
                                                    <div class="detail-item-checkbox-content">
                                                        <input type="checkbox" name="delete-table" value="delete-table" id="delete" class="role" <% if (allRole[0]['PRIVILEGE']) { %>
                                                            checked
                                                        <% } %>>
                                                        <label for="delete">Delete</label>
                                                    </div>
                                                </div>
                                                <div class="item-checkbox-content">
                                                    <div class="detail-item-checkbox-content">
                                                        <input type="checkbox" name="insert-table" value="insert-table" id="insert" class="role" <% if (allRole[1]['PRIVILEGE']) { %>
                                                            checked
                                                        <% } %>>
                                                        <label for="insert">Insert</label>
                                                    </div>
                                                </div>
                                                <div class="item-checkbox-content">
                                                    <div class="detail-item-checkbox-content">
                                                        <input type="checkbox" name="select-table" value="select-table" id="select" class="role" <% if (allRole[2]['PRIVILEGE']) { %>
                                                            checked
                                                        <% } %>>
                                                        <label for="select">Select</label>
                                                    </div>
                                                </div>
                                                <div class="item-checkbox-content">
                                                    <div class="detail-item-checkbox-content">
                                                        <input type="checkbox" name="update-table" value="update-table" id="update" class="role" <% if (allRole[3]['PRIVILEGE']) { %>
                                                            checked
                                                        <% } %> >
                                                        <label for="update">Update</label>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="box-btn">
                                            <button class="btn-submit" type="submit">Lưu thay đổi</button>
                                        </div>
                                    </form>
                                <% } %>
                            </div>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>

    <%- include('partials/layouts/scripts') %>
</body>

</html>