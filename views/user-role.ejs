<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('partials/layouts/head') %>

    <%- include('partials/layouts/styles') %>
</head>

<body>
    <div class="admin-page">
        <div class="container">
            <div class="header-top">
                <div class="nav-top">
                    <div class="bar-top">
                        <i class="fa fa-bars" aria-hidden="true"></i>
                    </div>
                    <div class="logo-top">
                        <p class="brand">Adminstrator</p>
                    </div>
                </div>
                <div class="menu-top">
                    <%- include('partials/layouts/admin-sidebar.ejs')  %> 
                </div>
            </div>
            <div class="body">
                <div class="sidebar">
                    <div class="header">
                        <p class="title">Quyền User</p>
                    </div>
                    <ul class="menu-list">
                        <li class="menu-item">
                            <a href="/admin/user/<%= user %>/detail/role" class="menu-link">
                                <span>Role</span>
                                <i class="fa fa-angle-right" aria-hidden="true"></i>
                            </a>
                        </li>
                        <li class="menu-item">
                            <a href="/admin/user/<%= user %>/detail/role/nhanvien" class="menu-link">
                                <span>Table</span>
                                <i class="fa fa-angle-right" aria-hidden="true"></i>
                            </a>
                        </li>
                        <li class="menu-item">
                            <a href="/admin/user/<%= user %>/detail/column/nhanvien" class="menu-link">
                                <span>Column</span>
                                <i class="fa fa-angle-right" aria-hidden="true"></i>
                            </a>
                        </li>
                    </ul>
                    <div class="box-btn">
                        <a href="/admin/user" class="btn-link">Quay lại</a>
                    </div>
                </div>
                <div class="main-body">
                    <div class="header">
                        <p class="title">Role Privilege</p>
                    </div>
                    <% if (type == 1) { %>
                        <form action="/admin/user/<%= user %>/detail/role" method="post">
                            <div class="table-check-box">
                                <% for( let i = 0; i < fullRole[1].length; i++ ) { %>
                                    <div class="item">
                                        <div class="detail-item">
                                            <input type="checkbox" name="ROLE_QLBENHVIEN_<%= fullRole[0][i]['ROLE'] %>" class="role" id="ROLE_QLBENHVIEN_<%= fullRole[0][i]['ROLE'] %>" <% if (fullRole[1][i]['GRANTED_ROLE'] !=0) { %>
                                            checked
                                            <% } %>>
                                            <label for="ROLE_QLBENHVIEN_<%= fullRole[0][i]['ROLE'] %>"><%= fullRole[0][i]['ROLE'] %></label>
                                        </div>
                                        <div class="detail-item">
                                            <input type="checkbox" name="gROLE_QLBENHVIEN_<%= fullRole[0][i]['ROLE'] %>" class="grant-role" id="gROLE_QLBENHVIEN_<%= fullRole[0][i]['ROLE'] %>" <% if (fullRole[1][i]['ADMIN_OPTION'] !=0) { %>
                                            checked
                                            <% } %>>
                                            <label for="gROLE_QLBENHVIEN_<%= fullRole[0][i]['ROLE'] %>">Grant</label>
                                        </div>
                                    </div>
                                <% } %>
                            </div>
                            <div class="box-btn">
                                <button type="submit" class="btn-submit">Lưu thay đổi</button>
                            </div>
                        </form>
                    <% } %>
                </div>
            </div>
        </div>
    </div>

    <%- include('partials/layouts/scripts') %>
</body>

</html>