<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('partials/layouts/head') %>

    <%- include('partials/layouts/styles') %>
</head>

<body>
    <%- include('partials/layouts/header') %>

    <div class="container-user">
        <div class="box-user">
            <div class="content-user">
                <div class="logo-user">
                    <img src="/images/no-user.jpg" alt="">
                </div>
                <a href="" class="link-detail-user">Trang cá nhân</a>
                <a href="/doctor/<%= iddoctor %>/drug-bill/page-1" class="link-detail-user">Quản lý đơn thuốc</a>
                <a href="/logout" class="link-detail-user">Đăng xuất</a>
            </div>
            <div class="btn-show-user">
                <i class="fa fa-angle-double-left" aria-hidden="true"></i>
            </div>
        </div>
    </div>

    <div class="container-item">
        <div class="categories-1">
            <div class="content">
                <div class="header">
                    <p class="title">Cửa hàng thuốc</p>
                </div>
            </div>
        </div>
        <div class="categories-2">
            <div class="sidebar">
                <div class="item">
                    <div class="header">
                        <p class="title">Danh mục</p>
                    </div>
                    <div class="menu-item">
                        <a href="/pharmacy/<%= iddoctor %>/drug-bill/page-1" class="link-item"><p>Tất cả đơn thuốc</p></a>
                    </div>
                    
                </div>
                <div class="item">
                    <div class="header">
                        <p class="title">Tìm kiếm theo tên</p>
                    </div>
                    <div class="box-search">
                        <form action="/pharmacy/<%= iddoctor %>/drug-bill/page-<%= page %>" method="GET">
                            <label for="search"></label>
                            <input type="search" name="search" id="search">
                            <button type="submit"><i class="fa fa-search" aria-hidden="true"></i></button>
                        </form>
                    </div>
                </div>
                
            </div>
            <div class="body-item">
                <div class="item">
                    <div class="header-body">
                        <a href="" class="link-filter"><p><i class="fa fa-filter" aria-hidden="true"></i> Lọc</p></a>
                        <a href="/pharmacy/<%= iddoctor %>/drug-bill/page-<% if (page == 1) { %><%= 1 %><% } else { %><%= page*1 - 1 %><% } if (isSearch) { %><%= '?search=' + search %><% } else { %><%= '' %><% } %>" title="trang trước" class="link-prev-page"><i class="fa fa-angle-left" aria-hidden="true"></i></a>
                        <a href="/pharmacy/<%= iddoctor %>/drug-bill/page-<% if (page == numPage) { %><%= numPage %><% } else { %><%= page*1 + 1 %><% } if (isSearch) { %><%= '?search=' + search %><% } else { %><%= '' %><% } %>" title="trang sau" class="link-next-page"><i class="fa fa-angle-right" aria-hidden="true"></i></a>
                    </div>
                    <div class="menu-item">
                        <% data.forEach(item => { %>
                            <div class="box-item">
                                <a href="/pharmacy/<%= iddoctor %>/drug-bill/page-<%= page %> /iddonthuoc" title="<%= item['IDDONTHUOC'] %>" class="box-item-link">
                                    <!-- <div class="logo-item"><img src="/images/no-user.jpg" alt=""></div>
                                    <p class="infor-1">Mã bệnh:  </p>
                                    <p class="infor-2">Họ tên: </p> -->
                                    adsadsadasd
                                </a>
                            </div>
                        <% }) %>                                                                                                                                                                                                                                                                                                                                                                                                        
                    </div>
                    
                </div>
            </div>
        </div>
    </div>

    <%- include('partials/layouts/footer')  %> 

    <%- include('partials/layouts/scripts') %>
</body>

</html>